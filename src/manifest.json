{
  "name": "Cocos Creator Devtool",
  "version": "1.0.0",
  "description": "Chrome and DevTools extension for debugging Cocos Creator games",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Cocos Creator Devtool",
    "default_icon": "img/icon-default.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "48": "img/icon-default.png"
  },
  "devtools_page": "html/cc-devtool.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/cc-devtool-contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/cc-devtool-backgroundScript.js"
    ]
  },
  "options_page": "html/options.html",
  "web_accessible_resources": [
    "*/*",
    "*"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "*://*/*",
    "tabs",
    "storage",
    "nativeMessaging"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval';  object-src 'self'"
}
